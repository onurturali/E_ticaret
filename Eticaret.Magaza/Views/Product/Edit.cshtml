@using Eticaret.Model;

@model Product;

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Product" asp-action="Update" method="post">
            @Html.HiddenFor(m => m.Id)

            <div class="mb-4">
                @Html.LabelFor(m=>m.Name, new { @class = "form-label" })
                @Html.TextBoxFor(m=>m.Name, new { @class = "form-control" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(m=>m.Price, new { @class = "form-label" })
                @Html.TextBoxFor(m=>m.Price, new { @class = "form-control" })
            </div>

            <div>
                <button class="btn btn-success">Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section Styles{
    <style>
        .form-control {
            border: 3px solid black;
            background-color: skyblue;
            box-shadow: 0 0 10px 2px black !important;
        }

            .form-control:focus {
                background-color: powderblue;
                border: 3px solid #0437f2;
                color: blue;
                font-size: 30px;
                box-shadow: 0 0 10px 2px blue !important;
            }
    </style>
}
